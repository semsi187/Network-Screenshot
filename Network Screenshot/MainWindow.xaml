<Window x:Class="Network_Screenshot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Screenshot"
        mc:Ignorable="d"
        Title="Screedshoot" Height="650" Width="1200" WindowStartupLocation="CenterScreen" Background="#222">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="559*"></RowDefinition>
            <RowDefinition Height="75*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Name="ImageBox" Grid.Row="0"/>

        <Button Content="Take Picture" FontSize="17" FontWeight="DemiBold" BorderThickness="0" Background="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Center" Height="43" Width="228" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
